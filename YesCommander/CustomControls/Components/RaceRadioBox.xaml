<UserControl x:Class="YesCommander.CustomControls.Components.RaceRadioBox"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:component="clr-namespace:YesCommander.CustomControls.Components" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid Margin="8,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="18"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="component:TinyImage">
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Width" Value="18"/>
                <Setter Property="Height" Value="18"/>
            </Style>
        </Grid.Resources>
        <RadioButton Name="check" VerticalAlignment="Center" Checked="check_Checked_1"/>
        <component:TinyImage x:Name="image" VerticalAlignment="Top" Grid.Column="1"/>
    </Grid>
</UserControl>
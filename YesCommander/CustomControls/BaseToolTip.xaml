<UserControl x:Class="YesCommander.CustomControls.BaseToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:metro="http://schemas.codeplex.com/elysium"
             xmlns:params ="http://schemas.codeplex.com/elysium/params"
             params:Design.Theme="Dark" params:Manager.Theme="Dark"
             d:DesignHeight="300" d:DesignWidth="300" MaxWidth="355">
        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="6"/>
                    <Setter Property="FontFamily" Value="../Resources/EXL_____.TTF#Exocet"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
            </Grid.Resources>
            <StackPanel Name="stackPanel1">
                <TextBlock Foreground="#FFEAD4" FontSize="22"/>
                <TextBlock Foreground="#f3e6d0" FontSize="12" FontFamily="Microsoft YaHei"/>
            </StackPanel>
        </Grid>
    </UserControl>

